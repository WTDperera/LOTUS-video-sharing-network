{
  "name": "lotus-video-platform",
  "version": "2.0.0",
  "description": "Lotus Video Streaming Platform - Modular Architecture",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm start --prefix server",
    "client": "npm run dev --prefix client",
    "server:prod": "npm start --prefix server",
    "client:build": "npm run build --prefix client",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rimraf client/node_modules server/node_modules node_modules"
  },
  "keywords": [
    "video",
    "streaming",
    "platform",
    "modular",
    "microservices"
  ],
  "author": "Lotus Platform Team",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}

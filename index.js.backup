// ==============================================
// LOTUS VIDEO STREAMING PLATFORM - Backend API
// THREE-TIER ARCHITECTURE
// ==============================================
// 1. Presentation Layer (Routes) - routes/
// 2. Business Logic Layer (Services/Controllers) - services/, controllers/
// 3. Data Access Layer (Models) - models/
// ==============================================

require('dotenv').config();
const express = require('express');
const mongoose = require('mongoose');
const cors = require('cors');

// Import Routes
const authRoutes = require('./routes/auth');
const videoRoutes = require('./routes/video');
const commentRoutes = require('./routes/comment');
const streamingRoutes = require('./routes/streaming');

// Import Middleware
const { errorHandler, notFound } = require('./middleware/errorHandler');

// Import Services (for initialization)
const thumbnailService = require('./services/thumbnailService');

// --- App Configuration ---
const app = express();
const port = process.env.PORT || 5000;

// Store port in app for access in controllers
app.set('port', port);

// --- Middleware ---
app.use(cors()); // Enable CORS
app.use(express.json()); // Parse JSON
app.use(express.urlencoded({ extended: true })); // Parse URL-encoded

// Serve uploaded files statically
app.use('/uploads', express.static('uploads'));

// Request logging (development)
if (process.env.NODE_ENV === 'development') {
  app.use((req, res, next) => {
    console.log(`${req.method} ${req.path}`);
    next();
  });
}

// ==============================================
// API ROUTES (PRESENTATION LAYER)
// ==============================================

// Health check endpoint
app.get('/health', (req, res) => {
  res.json({ 
    status: 'OK', 
    timestamp: new Date().toISOString(),
    mongodb: mongoose.connection.readyState === 1 ? 'Connected' : 'Disconnected'
  });
});

// Mount route modules
app.use('/api/auth', authRoutes);
app.use('/api/videos', videoRoutes);
app.use('/api', commentRoutes);
app.use('/video', streamingRoutes);

// ==============================================
// ERROR HANDLING MIDDLEWARE
// ==============================================
app.use(notFound); // 404 handler
app.use(errorHandler); // Global error handler

// --- Database Connection & Server Startup ---
